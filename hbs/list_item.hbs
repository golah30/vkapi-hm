{{#each items}}
<li class="item">
    <div class="user">
        <div class="avatar"><img src="{{image}}" alt="Avatar"></div>
        <div class="info">
            <span class="name">{{name}}</span>
            <span class="subname">{{subname}}</span>
        </div>
    </div>
    <div class="switch-button">
        <i class="fa fa-plus switch" aria-hidden="true"></i>
    </div>
</li>
{{/each}}